<!DOCTYPE html>
<html>
  <head>
    <title>ProgProg Books Online</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div ID="banner">
      <%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %>
      <span class = "title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
            <%= render @cart %>
          <% end %>
        </div>

        <ul>
          <li><%= link_to 'Home', store_index_path %></li>
          <!-- <li><a href="http://ww....">Home</a></li> -->
          <li><a href="http://ww....">Questions</a></li>
          <li><a href="http://ww....">News</a></li>
          <li><a href="http://ww....">Contact</a></li>
        </ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
